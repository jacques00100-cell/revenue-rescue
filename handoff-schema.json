{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["from", "to", "timestamp", "summary"],
  "properties": {
    "from": {"type": "string", "description": "Agent ID that completed work"},
    "to": {"type": "string", "description": "Agent ID receiving handoff"},
    "timestamp": {"type": "string", "format": "date-time"},
    "version": {"type": "integer", "description": "State file version at handoff"},
    "summary": {
      "type": "object",
      "required": ["status", "deliverables", "blockers", "next_steps"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["complete", "blocked", "partial", "failed"]
        },
        "deliverables": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Concrete outputs produced"
        },
        "metrics_delta": {
          "type": "object",
          "description": "Changes to key metrics"
        },
        "blockers": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Issues preventing progress"
        },
        "next_steps": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Recommended actions"
        },
        "context_notes": {
          "type": "string",
          "maxLength": 500,
          "description": "Subtle context: tone, ambiguity, half-formed decisions"
        },
        "assumptions": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Implicit assumptions made that downstream agents should validate"
        }
      }
    },
    "state_checksum": {
      "type": "string",
      "description": "SHA-256 of state.json at handoff time"
    }
  }
}
